<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/filterItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cartColor"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/codeColor"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:background="@color/black" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/txtNameItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/imgCheckedItem"
            android:layout_toEndOf="@id/cartColor"
            android:gravity="center_horizontal|center_vertical|center"
            android:text="Hello"
            android:textAlignment="center"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/imgCheckedItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="13dp"
            android:src="@drawable/ic_check" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2A7E7979" />

</LinearLayout>