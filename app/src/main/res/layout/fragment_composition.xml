<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_color"
    tools:context=".Fragments.CompositionFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/dmsans_regular"
                android:lineSpacingExtra="5dp"
                android:text="\u25CF Composition"
                android:textSize="20dp">

            </TextView>

            <TextView
                android:id="@+id/tv_composition_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dmsans_regular"
                android:padding="18dp"
                android:text="LEATHER: Clean with a clean, dry cloth. You can rub colourless or colour-matched waxes into the leather in a circular motion."
                android:textColor="@color/grey"
                android:textSize="18dp">

            </TextView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>