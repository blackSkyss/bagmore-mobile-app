<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AuthScreen.WelcomeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ln_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="Welcome,"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txt_bagmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Bag More"
            android:textColor="@color/black"
            android:textSize="30dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ln_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ln_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"/>

    <Button
        android:id="@+id/btn_sign_up_email"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:layout_below="@id/line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/grey1"
        android:drawableLeft="@drawable/mail"
        android:text="Sign up with Email"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <Button

        android:id="@+id/btn_sign_in_email"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:layout_below="@id/btn_sign_up_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/grey1"
        android:drawableLeft="@drawable/mail"
        android:text="Sign in with Email"
        android:textAllCaps="false"
        android:textColor="@color/black" />


</RelativeLayout>